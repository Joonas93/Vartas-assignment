<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")



</head>
<body>

    <div class="container body-content">
        @RenderBody()



        <footer class="fixed-bottom">

            <p align="center">&copy; @DateTime.Now.Year - Joonas Eskonheimo</p>

        </footer>


    </div>
</body>

@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
<script>
    @*Scripti overridee jqueryvalin methodit, koska HTML-validaatio ei hyväksynyt , desimaalin erottajana. Modelstate ei taaskaan
        hyväksynyt . desimaalin erottajana.. *@
    $.validator.methods.range = function (value, element, param) {
        var globalizedValue = value.replace(",", ".");
        return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
    }

    $.validator.methods.number = function (value, element) {
        return this.optional(element) || /-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
    }</script>
@RenderSection("scripts", required: false)

</html>
