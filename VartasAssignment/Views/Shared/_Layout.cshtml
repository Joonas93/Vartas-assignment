<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

</head>
<body>


    <div class="top-bar">
        <div class="top-bar-left">
            <ul class="dropdown vertical medium-horizontal menu" data-responsive-menu="drilldown medium-dropdown" data-auto-height="true" data-animate-height="true">
                <li class="menu-text">Elokuvateatteri X</li>
                <li>
                    @Html.ActionLink("Koti1", null)
                    <ul class="menu">
                        <li>
                            @Html.ActionLink("Koti2", null)
                            <ul class="menu">
                                <li>
                                    @Html.ActionLink("Koti3", null)
                                    <ul class="menu">
                                        <li>@Html.ActionLink("Etusivu", "Index", "Home") </li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>

    @RenderBody()

    <div class="grid-container">
        <br />
        <hr />
        <footer>
            <p align="center">&copy;  Joonas Eskonheimo</p>
        </footer>
    </div>

    
    @Scripts.Render("~/bundles/UIFoundation")
    @RenderSection("scripts", required: false)
</body>
</html>
